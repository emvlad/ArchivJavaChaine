package ModifierPlan2;


public class StrModification3 {

	public static void main(String[] args) {
		
		String chaine = "La chaine en copie.";
	
	//1-remplacer la première occurence (replaceFirst()).
		 String chainOccur  = chaine.replaceFirst("ai", "ê");
		 System.out.println("1-Remplacer la première occurence : " + chainOccur);
		
	//2-remplacer toutes les occurences (replaceAll()).	 
		 chaine  = chaine.replaceAll("i", "y");
		 System.out.println("2-Remplacer toutes les occurences : " + chaine);
	
	//3-recevoir un caractère dans une position exacte (charAt()).
		 int pos =1;
		 char car = chaine.charAt(pos);
		 System.out.println("2-Le caractère reçu à l'index \'" + pos + "\' est: " + car +".");
	
	//4-recevoir un caractère ou une chaine de la dernière occurence (lastIndexOf()).
		 int lastOccur = chaine.lastIndexOf("e");
		 System.out.println("4-recevoir la position du caractère ou d'une chaine est: " + lastOccur +".");
	
	}	
}
